{
  "name": "root",
  "private": true,
  "stylelint": {
    "extends": "@zzavidd/stylelint-config"
  },
  "prettier": "@zzavidd/prettier-config",
  "scripts": {
    "bootstrap": "lerna exec npm install --parallel",
    "build:app": "npm run build --prefix app",
    "build:utils": "npm run build --prefix utils",
    "check": "npm run check --prefix app && npm run check --prefix cli",
    "cli": "npm run cli --prefix cli",
    "clean": "lerna clean -y",
    "dev": "npm run dev --prefix app",
    "preenv": "rm -rf app/.env cli/.env",
    "env": "ln .env app/.env && ln .env cli/.env",
    "test:cli": "npm run test --prefix cli",
    "test:utils": "npm run test --prefix utils",
    "eslint": "eslint --ext .js,.ts,.tsx .",
    "stylelint": "stylelint **/*.scss"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.29.3",
    "@zzavidd/eslint-config": "^0.2.13",
    "@zzavidd/prettier-config": "^0.2.13",
    "@zzavidd/stylelint-config": "^0.2.13",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "^4.3.5"
  }
}
