{
  "name": "munity-saas",
  "private": true,
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    "app",
    "cli",
    "utils"
  ],
  "stylelint": {
    "extends": "@zzavidd/stylelint-config"
  },
  "prettier": "@zzavidd/prettier-config",
  "scripts": {
    "check": "yarn run check --prefix app && yarn run check --prefix cli && yarn run check --prefix utils",
    "cli": "yarn run cli --prefix cli",
    "clean": "lerna clean -y",
    "dev": "yarn run dev --prefix app",
    "preenv": "rm -rf app/.env cli/.env",
    "env": "ln .env app/.env && ln .env cli/.env",
    "eslint": "eslint --ext .js,.ts,.tsx .",
    "eslint:fix": "yarn run eslint -- --fix",
    "prettier": "prettier --ignore-path ../.gitignore --check \"**/*.{js,ts,tsx,scss,json}\"",
    "prettier:fix": "yarn run prettier -- --write",
    "stylelint": "stylelint **/*.scss"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.29.3",
    "@zzavidd/eslint-config": "^0.3.1",
    "@zzavidd/prettier-config": "^0.3.1",
    "@zzavidd/stylelint-config": "^0.3.1",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "typescript": "^4.3.5"
  }
}
