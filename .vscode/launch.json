{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI",
      "program": "${workspaceFolder}/code/cli/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--colors",
        "--no-timeouts",
        "${workspaceFolder}/code/cli/**/*.test.ts"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Utils",
      "program": "${workspaceFolder}/code/utils/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "ts-node/register",
        "--colors",
        "--no-timeouts",
        "${workspaceFolder}/code/utils/**/*.test.ts"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "protocol": "inspector"
    }
  ]
}
